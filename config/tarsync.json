{
    "path": {
        "windows": "c:\\Dropbox\\sync", 
        "symlink_linux": "$HOME/Dropbox/settings/applications", 
        "symlink_windows": "c:/Dropbox/settings/applications", 
        "linux": "$HOME/Dropbox/sync"
    }, 
    "symlink_path": {
        "windows": "c:/Dropbox/settings/applications", 
        "linux": "$HOME/Dropbox/settings/applications"
    }, 
    "programs": {
        "sublime": {
            "paths": [
                {
                    "windows": "%APPDATA%/Sublime Text 3/Packages/User", 
                    "name": "data", 
                    "linux": "$HOME/.config/sublime-text-3/Packages/User"
                }
            ], 
            "name": "sublime"
        }, 
        "pidgin": {
            "paths": [
                {
                    "windows": "%APPDATA%/.purple", 
                    "name": "data", 
                    "linux": "$HOME/.purple"
                }, 
                {
                    "windows": "%ProgramFiles(x86)%/Pidgin/pixmaps/pidgin/protocols", 
                    "name": "pixmaps_protocols", 
                    "linux": "/usr/share/pixmaps/pidgin/protocols"
                }
            ], 
            "name": "pidgin"
        }, 
        "terminator": {
            "paths": [
                {
                    "windows": false, 
                    "name": "data", 
                    "linux": "$HOME/.config/terminator"
                }
            ], 
            "name": "terminator"
        }, 
        "doublecmd": {
            "paths": [
                {
                    "windows": false, 
                    "name": "data", 
                    "linux": "$HOME/.config/doublecmd"
                }
            ], 
            "name": "doublecmd"
        }, 
        "kupfer": {
            "paths": [
                {
                    "windows": false, 
                    "name": "data", 
                    "linux": "$HOME/.config/kupfer"
                }, 
                {
                    "windows": false, 
                    "name": "plugins", 
                    "linux": "$HOME/.local/share/kupfer/plugins"
                }
            ], 
            "name": "kupfer"
        }, 
        "xbmc": {
            "paths": [
                {
                    "windows": "%APPDATA%/XBMC/userdata", 
                    "name": "userdata", 
                    "linux": "$HOME/.xbmc/userdata"
                }, 
                {
                    "windows": "%APPDATA%/XBMC/addons", 
                    "name": "addons", 
                    "linux": "$HOME/.xbmc/addons"
                }
            ], 
            "name": "xbmc"
        },
        "dev": {
            "paths": [
                {
                    "windows": false, 
                    "name": "dev", 
                    "linux": "$HOME/dev"
                } 
            ], 
            "name": "dev"
        }

    }
}